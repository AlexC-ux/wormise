{
    "compilerOptions": {
        "target": "ESNext",
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleDetection": "auto",
        "moduleResolution": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "outDir": "examples-build",
        "declaration": true,
        "rootDir": "./",
    },
    "include": [
        "examples/**/*",
        "src/**/*"
    ]
}