{
  "compilerOptions": {
    "target": "ESNext",
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleDetection": "auto",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build/cjs",
    "declaration": true,
    "rootDir": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__/*"]
}
